@model IEnumerable<string>

@{
    ViewData["Title"] = "Index";
}

<h2>Roles list</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Add</a>
